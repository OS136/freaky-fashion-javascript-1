<!DOCTYPE html>
<html lang="sv">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Administration</title>
    <link rel="stylesheet" href="/stylesheets/productList.css" />
  </head>
  <body>
    <header class="MainHeaderSection">
      <h1>Administration</h1>
    </header>
    <main class="AdminContainer">
      <aside class="SiderbarContainer">
        <ul class="SiteBarTopic">
          <li>
            <a href="#">Produkter</a>
          </li>
        </ul>
      </aside>
      <!-- Main box -->
      <div class="MainSectionProdukter">
        <section class="ProdukuerButton">
          <h2>Produkter</h2>

          <div class="ButtonContainer">
            <a onclick="loadProducts()" id="loadProducts" class="ButtonNew">
              Ladda produkter
            </a>
            <a class="ButtonNew" id="addProduct" href="/admin/products/new">
              Ny produkt
            </a>
          </div>
        </section>

        <table id="productTable" class="ProductTableContainer">
          <thead>
            <tr>
              <th>Namn</th>
              <th>SKU</th>
              <th>Pris</th>
            </tr>
          </thead>
          <tbody>
            <% if (products && products.length > 0) { %> <%
            products.forEach(product => { %>
            <tr>
              <td><%= product.name %></td>
              <td><%= product.SKU %></td>
              <td><%= product.price %></td>
            </tr>
            <% }) %> <% } else { %>
            <tr>
              <td colspan="3">Inga produkter tillg√§ngliga</td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </main>
    <script src="/js/productList.js"></script>
  </body>
</html>
